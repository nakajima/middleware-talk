<html>
  <head>
    <title>Slides</title>
    <style type="text/css" media="screen">
      <%= File.read(File.dirname(__FILE__) + '/css/slides.css') %>
    </style>
    <script type="text/javascript">
      <%= File.read(File.dirname(__FILE__) + '/js/jquery-1.3.2.js') %>
    </script>
    <script type="text/javascript" charset="utf-8">
      <%= File.read(File.dirname(__FILE__) + '/js/jquery.easing.js') %>
    </script>
    <script type="text/javascript" charset="utf-8">
      <%= File.read(File.dirname(__FILE__) + '/js/jquery.hash-changed.js') %>
    </script>
    <script type="text/javascript" charset="utf-8">
      <%= File.read(File.dirname(__FILE__) + '/js/slides.js') %>
    </script>
  </head>
  <body>
    <div id="slides">
      <div id="track">
        <% @slides.each_with_index do |content, idx| %>
          <div class="<%= @classes.shift %>">
            <div id="slide-<%= idx %>" class="content">
              <%= content %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>